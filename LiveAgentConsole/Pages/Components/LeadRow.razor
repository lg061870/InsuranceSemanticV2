@using LiveAgentConsole.ViewModels

@* LeadRow.razor *@
@* Represents a single lead in the dashboard table. Expects a LeadRowView as parameter. *@

<div class="grid grid-cols-12 gap-4 px-6 py-4 border-b border-gray-100 hover:bg-blue-50/30 transition-colors items-center group">
    <div class="col-span-3 flex items-center gap-3">
        <input type="checkbox" class="checkbox-custom cursor-pointer">
        <div class="flex items-center gap-3">
            <img src="@Lead.AvatarUrl" class="w-10 h-10 rounded-full object-cover border border-gray-200">
            <div>
                <h4 class="text-sm font-bold text-gray-900 group-hover:text-primary transition-colors">@Lead.Name</h4>
                <p class="text-xs text-gray-500">@Lead.Email</p>
            </div>
        </div>
    </div>
    <div class="col-span-2">
        <div class="flex items-center gap-2">
            <div class="w-8 h-8 rounded bg-blue-100 text-primary flex items-center justify-center text-sm">
                <i class="@Lead.ProductIcon"></i>
            </div>
            <div>
                <p class="text-sm font-medium text-gray-800">@Lead.Product</p>
                <p class="text-xs text-gray-500">@Lead.SubProduct</p>
            </div>
        </div>
    </div>
    <div class="col-span-1 flex flex-col items-center justify-center">
        <div class="relative w-10 h-10 flex items-center justify-center">
            <svg class="w-full h-full transform -rotate-90">
                <circle cx="20" cy="20" r="16" stroke="#e5e7eb" stroke-width="3" fill="none"></circle>
                <circle cx="20" cy="20" r="16" stroke="@Lead.ScoreColor" stroke-width="3" fill="none" stroke-dasharray="100" stroke-dashoffset="@Lead.ScoreOffset"></circle>
            </svg>
            <span class="absolute text-[10px] font-bold text-gray-700">@Lead.Score%</span>
        </div>
        <span class="text-[10px] font-bold @Lead.ScoreLabelColor uppercase mt-0.5">@Lead.ScoreLabel</span>
    </div>
    <div class="col-span-1">
        <p class="text-sm font-bold text-gray-800">@Lead.Value</p>
        <p class="text-xs text-gray-400">Annual</p>
    </div>
    <div class="col-span-2">
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800 mb-1">
            @Lead.Status
        </span>
        <p class="text-xs text-gray-600 flex items-center gap-1">
            <i class="fa-solid fa-phone text-gray-400 text-[10px]"></i> @Lead.NextStep
        </p>
    </div>
    <div class="col-span-2">
        <div class="flex items-center gap-2">
            <span class="w-6 h-6 rounded-full bg-blue-50 text-blue-600 flex items-center justify-center text-xs">
                <i class="@Lead.SourceIcon"></i>
            </span>
            <span class="text-sm text-gray-600">@Lead.Source</span>
        </div>
        <p class="text-xs text-gray-400 mt-0.5">@Lead.Campaign</p>
    </div>
    <div class="col-span-1 flex justify-end items-center gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
        <button class="w-8 h-8 rounded hover:bg-gray-100 text-gray-500 hover:text-primary transition-colors flex items-center justify-center" title="Call">
            <i class="fa-solid fa-phone"></i>
        </button>
        <button class="w-8 h-8 rounded hover:bg-gray-100 text-gray-500 hover:text-primary transition-colors flex items-center justify-center" title="Assign">
            <i class="fa-solid fa-user-plus"></i>
        </button>
        <button class="w-8 h-8 rounded hover:bg-gray-100 text-gray-500 hover:text-primary transition-colors flex items-center justify-center">
            <i class="fa-solid fa-ellipsis-vertical"></i>
        </button>
    </div>
</div>

@code {
    [Parameter] public LeadRowView Lead { get; set; } = default!;
}
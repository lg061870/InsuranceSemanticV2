@* Header.razor *@
@using LiveAgentConsole.Services
@inject AuthService AuthService
@inject AgentAuthenticationStateProvider AuthStateProvider
@inject NavigationManager Navigation

<header class="bg-white border-b border-gray-200 h-16 flex items-center justify-between px-6 shadow-sm sticky top-0 z-30">
    <div class="flex items-center gap-8">
        <div class="flex items-center gap-2">
            <div class="w-8 h-8 bg-primary rounded-lg flex items-center justify-center text-white font-bold shadow-sm">
                <i class="fa-solid fa-shield-halved"></i>
            </div>
            <h1 class="text-xl font-bold text-gray-800 tracking-tight">Copilot<span class="text-primary">Insurance</span></h1>
        </div>

        <nav class="hidden md:flex items-center gap-1">
            <NavLink href="/" Match="NavLinkMatch.All" class="px-4 py-2 text-sm font-medium" ActiveClass="text-white bg-primary rounded-md shadow-sm" InactiveClass="text-gray-600 hover:bg-gray-50 rounded-md transition-colors">
                <i class="fa-solid fa-users mr-2"></i>All Leads
            </NavLink>
            <NavLink href="/callbacks" class="px-4 py-2 text-sm font-medium" ActiveClass="text-white bg-primary rounded-md shadow-sm" InactiveClass="text-gray-600 hover:bg-gray-50 rounded-md transition-colors">
                <i class="fa-solid fa-phone-volume mr-2"></i>Callbacks <span class="ml-1 bg-red-100 text-red-600 text-xs px-1.5 py-0.5 rounded-full">3</span>
            </NavLink>
            <NavLink href="/ai-assistance" class="px-4 py-2 text-sm font-medium" ActiveClass="text-white bg-primary rounded-md shadow-sm" InactiveClass="text-gray-600 hover:bg-gray-50 rounded-md transition-colors">
                <i class="fa-solid fa-robot mr-2"></i>AI Assistance
            </NavLink>
            <NavLink href="/reports" class="px-4 py-2 text-sm font-medium" ActiveClass="text-white bg-primary rounded-md shadow-sm" InactiveClass="text-gray-600 hover:bg-gray-50 rounded-md transition-colors">
                <i class="fa-solid fa-chart-pie mr-2"></i>Reports
            </NavLink>
        </nav>
    </div>

    <div class="flex items-center gap-4">
        <div class="relative cursor-pointer">
            <span class="absolute top-0 right-0 w-2 h-2 bg-red-500 rounded-full border border-white"></span>
            <button class="text-gray-400 hover:text-gray-600 transition-colors"><i class="fa-regular fa-bell text-lg"></i></button>
        </div>
        <div class="h-8 w-[1px] bg-gray-200"></div>
        @if (_currentAgent != null)
        {
            <div class="flex items-center gap-3">
                <div class="text-right hidden sm:block">
                    <p class="text-sm font-bold text-gray-700">@_currentAgent.FullName</p>
                    <p class="text-xs text-green-600 font-medium flex items-center justify-end gap-1">
                        <span class="w-2 h-2 bg-green-500 rounded-full"></span> @_currentAgent.Status
                    </p>
                </div>
                <img src="@(_currentAgent.AvatarUrl ?? "https://storage.googleapis.com/uxpilot-auth.appspot.com/avatars/avatar-2.jpg")" class="w-9 h-9 rounded-full border border-gray-200 object-cover" alt="Profile">
                <button @onclick="HandleLogout" class="ml-2 px-3 py-1 text-sm text-gray-600 hover:text-gray-900 hover:bg-gray-100 rounded transition-colors" title="Logout">
                    <i class="fa-solid fa-right-from-bracket"></i>
                </button>
            </div>
        }
        else
        {
            <div class="text-sm text-gray-500">Loading...</div>
        }
    </div>
</header>

@code {
    private AgentResponse? _currentAgent;

    protected override async Task OnInitializedAsync()
    {
        _currentAgent = await AuthService.GetCurrentAgentAsync();
    }

    private async Task HandleLogout()
    {
        await AuthService.LogoutAsync();
        AuthStateProvider.MarkUserAsLoggedOut();
        Navigation.NavigateTo("/login", forceLoad: true);
    }
}
@typeparam TProduct

<div class="bg-white rounded-xl border border-gray-200 p-6 hover:shadow-lg transition-all relative">

    @if (Product.MatchScore >= 85) {
        <div class="absolute top-0 right-0 bg-blue-600 text-white text-xs font-bold px-4 py-1 rounded-bl-lg">
            BEST FIT
        </div>
    }

    <!-- Header -->
    <div class="flex items-start justify-between mb-4 mt-2">
        <div>
            <h3 class="text-lg font-bold text-gray-900">@Product.Name</h3>
            <p class="text-sm text-gray-600">@Product.Description</p>
        </div>

        <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
            <i class="fa-solid fa-shield text-blue-600 text-xl"></i>
        </div>
    </div>

    <!-- Details -->
    <div class="space-y-3 mb-5">
        <div class="flex items-center justify-between">
            <span class="text-sm text-gray-600">Coverage Amount</span>
            <span class="text-lg font-bold text-gray-900">@Product.Coverage</span>
        </div>

        <div class="flex items-center justify-between">
            <span class="text-sm text-gray-600">Monthly Premium</span>
            <span class="text-2xl font-bold text-blue-600">$@Product.MonthlyPremium</span>
        </div>

        <div class="flex items-center justify-between">
            <span class="text-sm text-gray-600">Match Score</span>
            <span class="text-sm font-semibold text-gray-900">@Product.MatchScore%</span>
        </div>
    </div>

    <div class="flex space-x-3">
        <button class="flex-1 bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2.5 rounded-lg transition-colors">
            <i class="fa-solid fa-check mr-2"></i>
            Recommend
        </button>

        <button class="px-4 bg-gray-100 hover:bg-gray-200 text-gray-700 font-semibold py-2.5 rounded-lg transition-colors">
            <i class="fa-solid fa-info-circle"></i>
        </button>
    </div>

</div>

@code {
    [Parameter] public TProduct Product { get; set; } = default!;
}
